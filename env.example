# Database Configuration
# Формат: postgresql://пользователь:пароль@хост:порт/название_базы
DATABASE_URL=postgresql://postgres:ваш_пароль@localhost:5432/projectapp

# Session Secret (сгенерируйте случайную строку)
SESSION_SECRET=change-this-secret-key-in-production

# Environment
NODE_ENV=development

# Base URL для email ссылок
BASE_URL=http://localhost:5000

# Email Configuration (опционально, для production)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=ваш-email@gmail.com
# SMTP_PASS=ваш-пароль-приложения
# SMTP_FROM=noreply@example.com

# Google OAuth (для входа через Google)
# GOOGLE_CLIENT_ID=ваш-google-client-id
# GOOGLE_CLIENT_SECRET=ваш-google-client-secret
# GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

